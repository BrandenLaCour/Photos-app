<%-include('../partials/header.ejs')%>
<h1>Add New Photo</h1>
<h3><%=message%></h3>

<form method='POST' action="/photos">
  <div class="form-group">
    <label for="username">Title</label>
    <input type="text" class="form-control col-3" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="form-group url">
    <label for="url">Image Url</label>
    <input type="text" class="form-control col-3" id="url" name="url" placeholder="Image Url">
  </div>
   <div class="form-group">
    <label for="desc">Description</label>
    <input type="text" class="form-control col-3" id="desc" name="desc" placeholder="Name">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


<script type="text/javascript">
  $('form').submit( () => {
  
  const url = $('#url').val()
  
  if (!url){
    event.preventDefault()
    const requiredText = $('<small>Url is Required!</small>').css({'color': 'red'})
    $('.url').append(requiredText)
  }
  else if (!url.includes('http')){

    event.preventDefault()
    const requiredText = $('<small>Proper Url format is required!</small>').css({'color': 'red'})
    $('.url').append(requiredText)
  }

})  

</script>

<%-include('../partials/footer.ejs')%>