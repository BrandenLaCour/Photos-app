<%-include('../partials/header.ejs')%>
<h1>Login</h1>
<h3><%=message%></h3>

<form method='POST' action="/auth/login">
  <div class="form-group user">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control col-3" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="form-group pass">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control col-3" id="password" name="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


<script type="text/javascript">
  $('form').submit( () => {
  
  const username = $('#username').val()
  const password = $('#password').val()
  
  if (!username){
    event.preventDefault()
    const requiredText = $('<small>Username Is Required</small>').css({'color': 'red'})
    $('.user').append(requiredText)
  }
  else if (!password) {
    event.preventDefault()
    const requiredText = $('<small>Password Is Required</small>').css({'color': 'red'})
    $('.pass').append(requiredText)
  }
})  

</script>

<%-include('../partials/footer.ejs')%>